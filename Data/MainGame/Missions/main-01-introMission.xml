<mission>
	<missionNumber attr1="2"/>
	<nextMissionNumber attr1="3"/>
	<objective>
		<objectiveType attr1="time"/> 
		<timer attr1="3"/>
	</objective>
	<postDialog>
		<dialog>
			<dialogCharacterType attr1="non_player"/>
