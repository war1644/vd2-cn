<mission>
	<missionNumber attr1="3"/>
	<nextMissionNumber attr1="4"/>
	<objective>
		<objectiveType attr1="comms_target"/> 
		<objectName attr1="civilianOutpost01"/>
		<markObject attr1="civilianOutpost01"/>
	</objective>
	<missionHUDText attr1="打开通讯:"/>
	<missionHUDText attr1="定位通讯基地 - 左键点击该基地"/>
	<missionHUDText attr1="打开通讯 - 快捷键" attr2="command_common" attr3="comms"/>
	<postDialog>
		<dialog>
			<dialogCharacterType attr1="player"/>
			<content attr1="H... Hello?"/>
		</dialog>
		<dialog>
			<dialogCharacterType attr1="non_player"/>
			<characterID attr1="sam"/>
			<content attr1="我正准备去通知太空站警备人员……"/>
			<content attr1="事实上..."/>
			<content attr1="你的飞船似乎没有登记过哦."/>
			<content attr1="请解释下?"/>
		</dialog>
		<dialog>
			<dialogCharacterType attr1="player"/>
			<content attr1="我不明白你在说什么……"/>
		</dialog>
		<dialog>
			<dialogCharacterType attr1="non_player"/>
			<characterID attr1="sam"/>
			<content attr1="什么叫你说你不……"/>
			<content attr1="哦，又来一个……"/>
		</dialog>
		<dialog>
			<dialogCharacterType attr1="player"/>
			<content attr1="What?"/>
		</dialog>
		<dialog>
			<dialogCharacterType attr1="non_player"/>
			<characterID attr1="sam"/>
			<content attr1="你是不是在一艘飞船中醒来？"/>
			<content attr1="你不知道自己是谁，也不知道自己身在何处，"/>
			<content attr1="然后有一些蠢货开始对你下达各种命令？"/>
			<content attr1="我前面说的对不对？"/>
		</dialog>
		<dialog>
			<dialogCharacterType attr1="player"/>
			<content attr1="没错！"/>
			<content attr1="你能帮助我吗？"/>
		</dialog>
		<dialog>
			<dialogCharacterType attr1="non_player"/>
			<characterID attr1="sam"/>
			<bClearAllText attr1="1"/>
			<content attr1="见鬼！又来一个！"/>
			<content attr1="你是一个废渣。"/>
			<content attr1="你已经没救了。"/>
		</dialog>
		<dialog>
			<dialogCharacterType attr1="non_player"/>
			<characterID attr1="sam"/>
			<content attr1="听着，我没时间也没耐心跟你解释一切。"/>
			<content attr1="你失去了记忆……那是你的转变过程所造成的结果。"/>
			<content attr1="这并不奇怪。"/>
			<content attr1="我会帮你和你的飞船进行注册。"/>
			<content attr1="注册完成后你的账户上就会有数额为487的资金转入。"/>
		</dialog>
		<dialog>
			<dialogCharacterType attr1="player"/>
			<content attr1="谢谢你。"/>
		</dialog>
		<dialog>
			<dialogCharacterType attr1="non_player"/>
			<characterID attr1="sam"/>
			<content attr1="这只是正常流程罢了。"/>
		</dialog>
		<dialog>
			<dialogCharacterType attr1="non_player"/>
			<characterID attr1="sam"/>
			<content attr1="或许这听起来有些不可思议……"/>
			<content attr1="但你和你的同胞们曾经参加过一场战争。"/>
			<content attr1="一般情况下，你们都会在香格里拉进行修整。"/>
			<content attr1="香格里拉是一个基地。"/>
			<content attr1="那里有TSF医疗设施。"/>
			<content attr1="TSF是我们这里的维和部队。"/>
			<content attr1="他们不允许失忆的武装生化人四处行动。"/>
		</dialog>
		<dialog>
			<dialogCharacterType attr1="non_player"/>
			<characterID attr1="sam"/>
			<content attr1="但这样的生化人确实有不少，有些还拉帮结派。"/>
			<content attr1="不过那种人一般都不是好人。"/>
			<content attr1="在这宇宙中，肯定有人想要利用你。"/>
			<content attr1="或者想杀死你……"/>
		</dialog>
		<dialog>
			<dialogCharacterType attr1="player"/>
			<bClearAllText attr1="1"/>
			<content attr1="我该怎么做？"/>
		</dialog>
		<dialog>
			<dialogCharacterType attr1="non_player"/>
			<characterID attr1="sam"/>
			<content attr1="嗯……你有两个选择。"/>
			<content attr1="前往香格里拉，获得评价。"/>
		</dialog>
		<dialog>
			<dialogCharacterType attr1="non_player"/>
			<characterID attr1="sam"/>
			<content attr1="如果你很幸运。 你会被放到冰上。"/>
			<content attr1="他们迟早会解冻你，让你通过康复治疗并给你一份工作。"/>
			<content attr1="你马上就会擦洗通风口！"/>
		</dialog>
		<dialog>
			<dialogCharacterType attr1="player"/>
			<content attr1="另一个选择是什么？"/>
		</dialog>
		<dialog>
			<dialogCharacterType attr1="non_player"/>
			<characterID attr1="sam"/>
			<content attr1="随便你怎么做。"/>
			<content attr1="先从在这个基地停靠开始。"/>
			<content attr1="先接手一些简单的任务。"/>
			<content attr1="把你那堆破烂升升级，再去买一艘更好的船。"/>
			<content attr1="在那之后，你就可以去找点其他事情做了。"/>
			<content attr1="或许……"/>
		</dialog>
		<dialog>
			<dialogCharacterType attr1="non_player"/>
			<characterID attr1="sam"/>
			<content attr1="你可以花点时间在模拟装置中练习一下飞行。"/>
			<content attr1="毕竟我也不想再去向上头提交撞毁报告……"/>
		</dialog>
	</postDialog>
	<postTrigger>
		<triggerType attr1="next_mission"/>
		<missionID attr1="main02"/>
	</postTrigger>
</mission>
